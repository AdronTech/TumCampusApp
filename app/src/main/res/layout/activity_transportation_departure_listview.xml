<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/line_symbol_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/line_symbol"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/line_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:layout_margin="4dp"
        android:layout_toEndOf="@+id/line_symbol_ll"
        android:layout_toLeftOf="@+id/line_time"
        android:layout_toRightOf="@+id/line_symbol_ll"
        android:layout_toStartOf="@+id/line_time" />

    <TextView
        android:id="@+id/line_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="right|center_vertical"
        android:minWidth="50dp"
        android:textColor="@color/sections_green" />
</RelativeLayout>