<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">
    <!-- The main content view -->

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <!-- The toolbar aka SupportActionBar -->
    <include layout="@layout/toolbar" />


       <LinearLayout
        android:id="@+id/questionPopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        >

           <TextView
               style="@style/SectionHeadline"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Enter The Choices" />

        <EditText
            android:id="@+id/choice1Et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choice 1"/>

        <EditText
            android:id="@+id/choice2Et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choice 2"/>

        <EditText
            android:id="@+id/choice3Et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choice 3"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/submitChoicesBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/color_primary"
                android:layout_margin="10dp"
                android:textColor="#FFFFFF"
                android:text="Submit" />

            <Button
                android:id="@+id/dismissChoicesBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/color_primary"
                android:layout_margin="10dp"

                android:text="Dismiss" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/mainLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <TextView
                style="@style/SectionHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start The Quiz" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    style="@style/SmallListSeparatorTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please Select Departments."
                    android:textSize="16sp" />


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informatics"
                    android:id="@+id/infChBx" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Engineering"
                    android:id="@+id/enChBx" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business"
                    android:id="@+id/buChBx" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pharmacy"
                    android:id="@+id/phChBx" />

                <TextView
                    style="@style/SmallListSeparatorTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please Enter Your Question."
                    android:layout_marginTop="15dp"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etQuestion"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:maxLines="2"
                    android:hint="Type Here..." />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/questionSpinner"
                    android:layout_gravity="center_horizontal"
                    android:spinnerMode="dropdown" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit Question"
                    android:background="@color/color_primary"
                    android:padding="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/submitQuestionBtn"
                    android:layout_gravity="center_horizontal" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
    <!-- The navigation drawer -->
    <include layout="@layout/navigation_drawer" />

</android.support.v4.widget.DrawerLayout>