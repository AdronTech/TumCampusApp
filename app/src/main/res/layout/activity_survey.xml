<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">
    <!-- The main content view -->

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <!-- The toolbar aka SupportActionBar -->
        <include layout="@layout/toolbar" />
        <LinearLayout
            android:id="@+id/mainLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textOff="Survey"
                    android:textOn="Survey"
                    android:background="#FFFFFF"
                    android:textColor="@color/color_primary"
                    android:id="@+id/toggleButton" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textOff="Results"
                    android:textOn="Results"
                    android:background="#FFFFFF"
                    android:textColor="@color/color_primary"
                    android:id="@+id/toggleButton2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/resultsLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <TextView
                    style="@style/SectionHeadline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter The Choices" />

                <EditText
                    android:id="@+id/choice1Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Choice 1"/>

                <EditText
                    android:id="@+id/choice2Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Choice 2"/>

                <EditText
                    android:id="@+id/choice3Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Choice 3"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/submitChoicesBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/color_primary"
                        android:layout_margin="10dp"
                        android:textColor="#FFFFFF"
                        android:text="Submit" />

                    <Button
                        android:id="@+id/dismissChoicesBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/color_primary"
                        android:layout_margin="10dp"

                        android:text="Dismiss" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:id="@+id/surveyLayout"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="5"
                    android:layout_height="wrap_content">
                <TextView
                    style="@style/SmallListSeparatorTextViewStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Please Select Number of Questions"
                    android:layout_marginTop="15dp"
                    android:layout_weight="4"
                    android:textSize="16sp" />


                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/spinner1"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/oneQuestion"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etQuestion1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:maxLines="2"
                    android:hint="Type Here..." />

            </LinearLayout>

                <LinearLayout
                    android:id="@+id/twoQuestions"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etQuestion2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical"
                        android:maxLines="2"
                        android:visibility="gone"
                        android:hint="Type Here..." />

                </LinearLayout>

                <LinearLayout

                    android:id="@+id/threeQuestions"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etQuestion3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical"
                        android:maxLines="2"
                        android:visibility="gone"
                        android:hint="Type Here..." />

                </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit Question"
                        android:background="@color/color_primary"
                        android:padding="10dp"
                        android:layout_marginTop="20dp"
                        android:textColor="#FFFFFF"
                        android:id="@+id/submitQuestionBtn"
                        android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <!-- The navigation drawer -->
    <include layout="@layout/navigation_drawer" />

</android.support.v4.widget.DrawerLayout>