<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <style name="SectionHeadline">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoLink">none</item>
        <item name="android:background">@color/sections_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/section_padding</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/section_text_size</item>
    </style>

    <style name="TimeSectionLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/time_line_thickness</item>
        <item name="android:background">@color/sections_gray</item>
    </style>

    <style name="TimeSectionTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DemoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/BlueActionBar</item>
        <item name="actionBarStyle">@style/BlueActionBar</item>
    </style>

    <style name="SmallListSeparatorTextViewStyle">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlueActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background"  tools:ignore="NewApi">@drawable/ab_solid_blue</item>
        <item name="background">@drawable/ab_solid_blue</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ButtonBar" parent="@android:style/ButtonBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ButtonBarButton">
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="fade_animation">
        <item name="@android:windowEnterAnimation">@anim/fadein</item>
        <item name="@android:windowExitAnimation">@anim/fadeout</item>
    </style>

</resources>