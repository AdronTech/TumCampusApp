<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="SectionHeadline">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoLink">none</item>
        <item name="android:background">@color/sections_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/section_text_size</item>
    </style>

    <style name="TimeSectionLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/time_line_thickness</item>
        <item name="android:background">@color/sections_gray</item>
    </style>

    <style name="TimeSectionTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/BlueActionBar</item>
        <item name="actionBarStyle">@style/BlueActionBar</item>
        <item name="android:actionDropDownStyle" tools:ignore="NewApi">@style/SpinnerBlue</item>
        <item name="actionDropDownStyle">@style/SpinnerBlue</item>
        <item name="android:actionBarTabStyle" tools:ignore="NewApi">@style/MyActionBarTabView</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabView</item>
    </style>

    <style name="MyActionBarTabView" parent="Widget.AppCompat.Base.ActionBar.TabView">
        <item name="android:background">@color/sections_blue</item>
    </style>

    <style name="SmallListSeparatorTextViewStyle">
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlueActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background" tools:ignore="NewApi">@drawable/ab_solid_blue</item>
        <item name="android:subtitleTextStyle" tools:ignore="NewApi">@style/BlueActionBar.Subtitle
        </item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/ab_solid_blue</item>
        <item name="subtitleTextStyle">@style/BlueActionBar.Subtitle</item>
    </style>

    <style name="BlueActionBar.Subtitle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/actionbar_subtitle</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ButtonBar" parent="@android:style/ButtonBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ButtonBarButton">
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="fade_animation">
        <item name="@android:windowEnterAnimation">@anim/fadein</item>
        <item name="@android:windowExitAnimation">@anim/fadeout</item>
    </style>

    <style name="FlatButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">@drawable/borderless_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:paddingRight">14dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="SpinnerBlue" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:dropDownSelector">@drawable/abc_spinner_ab_holo_blue</item>
        <item name="android:background">@drawable/abc_spinner_ab_holo_blue</item>
    </style>

</resources>